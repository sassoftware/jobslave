"""
Spit the version number we're built with into a config file. The jobmaster will
read this file, and use it to find the version of group-jobslave that it should
boot.
"""
class RbuilderMCP(PackageRecipe):
    name = 'rbuilder-mcp'
    version = '0'

    def setup(r):
        r.Create('/srv/rbuilder/jobmaster/config.d/05_trove.conf',
            contents='troveVersion %(version)s')
        r.Transient('.*\.conf')

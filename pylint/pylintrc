[BASIC]
# Regular expression which should only match correct class names
class-rgx=[A-Z_][a-zA-Z0-9]+$

# Regular expression which should only match correct function names
function-rgx=[a-z_][a-zA-Z0-9]*$

# Regular expression which should only match correct function names
name-rgx=[a-z_][a-zA-Z0-9]*$

# Regular expression which should only match correct method names
method-rgx=([a-z_][a-zA-Z0-9]*)|(__[a-z][a-zA-Z0-9]+__)$

# Regular expression which should only match correct argument names
argument-rgx=[a-z][a-zA-Z0-9]*$

# Regular expression which should only match correct variable names
variable-rgx=[a-z][a-zA-Z0-9]*$

# Attributes can be camel case too
attr-rgx=[a-z_][a-zA-Z0-9_]{2,30}$

# Good variable names which should always be accepted, separated by a comma
good-names=log,_


[REPORTS]
files-output=yes
reports=yes
include-ids=yes

[MESSAGES CONTROL]
# E0602 and E1101 are to ignore the errors caused by the magic setting of
# enums in buildtypes.py
disable-msg=W0102,W0142,I0011,R0903,E0602,E1101
